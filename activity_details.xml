<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:orientation="vertical"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/sritbus"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bus Number"
        android:id="@+id/bus_number"/>
    <TextView
        android:id="@+id/bus_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bus Driver Name" />
    <TextView
        android:id="@+id/bus_driver_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bus Driver contact"
        android:autoLink="phone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="S-D Place"
            android:textSize="25sp"
            android:id="@+id/bus_s_d_place"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Timings"
            android:textSize="25sp"
            android:id="@+id/bus_timings"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/bus_stopName"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/bus_stopTime"
            />
    </LinearLayout>

</LinearLayout>
