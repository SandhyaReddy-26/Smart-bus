<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_rowWeight="10"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgView_id"
                android:layout_marginTop="1dp"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:src="@drawable/clg_bus_logo"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/bus_number_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="1"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#101bb4"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_weight="7.8"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="87dp"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/bus_stops_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:ems="20"
                    android:layout_gravity="center"
                    android:text="Syndicate Nagar-SRgardens"
                    android:textColor="#09df29"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.3"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="2.5"
                        android:text="Starting"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/times_id"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="08:45 AM"
                        android:textColor="#cc0e47"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="2.5"
                        android:text="Reaching"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/destitimes_id"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="09:20 AM"
                        android:textColor="#cc0e47"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:id="@+id/navigate_map"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/directions"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
